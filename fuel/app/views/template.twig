<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="{{ css }}">
</head>
<body>
    <header id="header">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <a class="navbar-brand" href="/company">DDG Administration tool</a>
          </div>
          <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Menu <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="{{ domain }}auth/logout" class="glyphicon glyphicon-user">Account</a></li>
                  <li><a href="{{ domain }}auth/logout" class="glyphicon glyphicon-question-sign">About</a></li>
                  <li><a href="{{ domain }}auth/logout" class="glyphicon glyphicon-off">Logout</a></li>
                </ul>
              </li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </nav>
    </header>

    <footer id="footer">
        <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex5-collapse">
                <ul class="nav navbar-nav">
                  <li><a href="{{ domain }}company/" class="glyphicon glyphicon-leaf">Company</a></li>
                  <li><a href="{{ domain }}oproject/" class="glyphicon glyphicon-leaf">Projects (outsource)</a></li>
                  <li><a href="{{ domain }}user/" class="glyphicon glyphicon-leaf">Users</a></li>
                  <li><a href="{{ domain }}master/" class="glyphicon glyphicon-leaf">Static data</a></li>
                </ul>
                <p class="navbar-text pull-right glyphicon glyphicon-user">{{ current_user.nickname }}</p>
            </div><!-- /.navbar-collapse -->
        </nav>
    </footer>

    <div id="main">
        {{ content }}
    </div>

    <script>
      var TOKEN_NAME = '{{ token_name }}';
    </script>
    <script src="{{ domain }}assets/js/lib/require.js"></script>
    <script src="{{ domain }}assets/js/{{ js }}/main.js"></script>

    {{ token_script }}

</body>
</html>